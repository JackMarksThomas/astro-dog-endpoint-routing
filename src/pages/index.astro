---
import DefaultPage from '../layouts/default-page.astro';

const response = await fetch(`https://dog.ceo/api/breeds/list/all`)
const { message } = await response.json()
const breeds = Object.keys(message)

const title = 'Dogs!'
const description = 'A list of all the dog breeds.'

const { url, text, image } = Astro.props;
---

<DefaultPage title={title}>
  <p>{description}</p>
	<ul>
		{breeds.map(breed => <li><a href={`/dogs/${breed}`}>{breed}</a></li>)}
	</ul>
</DefaultPage>
